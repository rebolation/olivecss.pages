---
import Layout from '../layouts/Layout.astro';
import AstroReact from '../components/AstroReact';
import AstroVue from '../components/AstroVue.vue';
import AstroSvelte from '../components/AstroSvelte.svelte';
import "../index.css";

const title = "Hello Astro, I'm Olive!"
const code1 = `<p>ðŸ«’</p> {/* font-bold */}`
const islands = [
	{ name: 'React Island', theme: 'bg-cyan-600' },
	{ name: 'Vue Island', theme: 'bg-emerald-500' },
	{ name: 'Svelte Island', theme: 'bg-orange-600' },
	// { name: 'Preact Island', theme: 'bg-purple-800' },
	// { name: 'Solid Island', theme: 'bg-sky-700' },
]
const features = [
	'comment â†’ INLINE-STYLE',
	'comment â†’ CLASS',
	'comment â†’ COMMENT',
]
---

<Layout>
	<div> <!-- relative min-h-screen text-center mx-0 px-0 flex flex-col -->
		<p>{title}</p> <!-- relative z-10 text-white text-3xl font-bold py-2 w-full text-center --> <!-- background: #3b5265; -->
		<div> <!-- bg-slate-800 max-w-xl mx-auto rounded-lg p-8 flex flex-col space-y-2 gap-1 -->
			<p><code>{code1}</code></p>
			<pre>{code1}</pre>
		</div>
		<div> <!-- flex-1 relative flex flex-col justify-start items-center py-8 pt-16 -->
			<div></div> <!-- absolute inset-0 bg-gray-100 bg-gradient-to-t from-teal-900 via-sky-600 to-cyan-100 opacity-70 -->
			<p>Sea of Astro</p> <!-- relative z-10 text-3xl font-thin text-sky-900 py-8 -->
			<div> <!-- relative z-10 flex flex-wrap items-center justify-center max-w-screen-3xl mx-auto gap-8 px-4 -->
				{islands.map((island, index) => (
					<div> <!-- zoom: 0.6 -->
						{(island.name == 'React Island') && <AstroReact name={island.name} theme={island.theme} features={features} />}
						{(island.name == 'Vue Island') && <AstroVue name={island.name} theme={island.theme} features={features} />}
						{(island.name == 'Svelte Island') && <AstroSvelte name={island.name} theme={island.theme} features={features} />}
						{(island.name == 'Preact Island') && <AstroPreact name={island.name} theme={island.theme} features={features} />}
						{(island.name == 'Solid Island') && <AstroSolid name={island.name} theme={island.theme} features={features} />}
					</div>
				))}
			</div>
		</div>
		<div> <!-- fixed z-100 top-3 left-4 -->
			<a aria-label="GitHub repository" href="https://github.com/rebolation/olivecss">
				<svg viewBox="0 0 20 20"> <!-- size-6 fill-gray-100 --> 
					<path d="M10 0C4.475 0 0 4.475 0 10a9.994 9.994 0 006.838 9.488c.5.087.687-.213.687-.476 0-.237-.013-1.024-.013-1.862-2.512.463-3.162-.612-3.362-1.175-.113-.287-.6-1.175-1.025-1.412-.35-.188-.85-.65-.013-.663.788-.013 1.35.725 1.538 1.025.9 1.512 2.337 1.087 2.912.825.088-.65.35-1.088.638-1.338-2.225-.25-4.55-1.112-4.55-4.937 0-1.088.387-1.987 1.025-2.688-.1-.25-.45-1.274.1-2.65 0 0 .837-.262 2.75 1.026a9.28 9.28 0 012.5-.338c.85 0 1.7.112 2.5.337 1.912-1.3 2.75-1.024 2.75-1.024.55 1.375.2 2.4.1 2.65.637.7 1.025 1.587 1.025 2.687 0 3.838-2.337 4.688-4.562 4.938.362.312.675.912.675 1.85 0 1.337-.013 2.412-.013 2.75 0 .262.188.574.688.474A10.016 10.016 0 0020 10c0-5.525-4.475-10-10-10z"></path>
				</svg>
			</a>
		</div> 
	</div>

</Layout>